{
  "name": "mcp-brop",
  "version": "2.1.0",
  "description": "Browser Remote Operations Protocol with multiplexed CDP relay support",
  "type": "module",
  "main": "background.js",
  "scripts": {
    "dev": "nodemon",
    "bridge": "node bridge/bridge_server.js",
    "mcp": "node bridge/mcp-server.js",
    "pack:extension": "node pack-extension.js",
    "pack:extension:clean": "node pack-extension.js --no-timestamp",
    "test:cdp": "cd tests && ./run-tests.sh",
    "test:quick": "cd tests && node quick-cdp-test.js",
    "test:brop": "cd tests && node quick-brop-test.js",
    "test:bridge": "cd tests && node unified-bridge-test.js",
    "test:wikipedia": "cd tests && node playwright-wikipedia-test.js",
    "test:wikipedia:cdp": "cd tests && node playwright-wikipedia-cdp.js",
    "test:cdp:real": "cd tests && node test-real-cdp-proxy.js",
    "test:cdp:bridge": "cd tests && node test-bridge-cdp-proxy.js",
    "proxy": "cd tests && node cdp-proxy.js",
    "analyze:cdp": "cd tests && node programmatic-cdp-analysis.js",
    "test:direct:cdp": "cd tests && node direct-cdp-commands-test.js",
    "test:browser:cdp": "cd tests && node browser-level-cdp-test.js",
    "test:raw:cdp": "cd tests && node raw-chrome-cdp-test.js",
    "test:cdp:summary": "cd tests && node cdp-support-summary.js",
    "analyze:cdp:traffic": "node tools/cdp-traffic-analyzer.js",
    "capture:cdp:native": "export CDP_DUMP_FILE='reports/cdp_dump_native.jsonl' && mitmdump -s tools/cdp_dump.py --mode reverse:http://localhost:9222 -p 19222",
    "capture:cdp:bridge": "export CDP_DUMP_FILE='reports/cdp_dump_bridge.jsonl' && mitmdump -s tools/cdp_dump.py --mode reverse:http://localhost:9222 -p 19222",
    "compare:cdp": "node tools/cdp-traffic-analyzer.js reports/cdp_dump_native.jsonl reports/cdp_dump_bridge.jsonl"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "https-proxy-agent": "^7.0.6",
    "nodemon": "^3.0.2",
    "proxy-agent": "^6.5.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dom-to-semantic-markdown": "^1.5.0",
    "playwright": "^1.53.0",
    "ws": "^8.14.2"
  },
  "optionalDependencies": {
    "google-protobuf": "^3.21.2",
    "protobufjs": "^7.2.5"
  }
}