{
  "name": "mcp-brop",
  "version": "1.0.0",
  "description": "Browser Remote Operations Protocol - Chrome Extension",
  "main": "background.js",
  "scripts": {
    "build": "npm run build:js",
    "build:proto": "echo 'Protocol Buffers compilation skipped - using JSON for simplified implementation'",
    "build:js": "echo 'JavaScript build complete - no compilation needed for extension'",
    "dev": "nodemon",
    "dev:auto": "node bridge-auto-reload.js",
    "dev:legacy": "node start-dev.js",
    "debug:clear": "node debug-clear.js",
    "debug:errors": "node get-extension-errors.js",
    "debug:reload": "node debug-reload.js",
    "debug:logs": "node get-bridge-logs.js",
    "debug:workflow": "node debug-workflow.js",
    "test:complete": "node test-complete-flow.js",
    "test:reload": "node test-reload-feature.js",
    "clean": "rm -rf dist/ generated/",
    "install-protoc": "npm install -g protobufjs-cli",
    "setup": "echo 'BROP Extension setup complete. Load the extension in Chrome developer mode.'",
    "bridge": "node bridge/bridge_server.js",
    "start-bridge": "node bridge/bridge_server.js",
    "mcp": "node bridge/mcp.js",
    "start-mcp": "node bridge/mcp.js",
    "test:mcp": "node test-mcp-stdio.js",
    "test:mcp:old": "node test-mcp-modes.js",
    "mcp:inspect": "npx @modelcontextprotocol/inspector bridge/mcp.js",
    "pack:extension": "node pack-extension.js",
    "pack:extension:clean": "node pack-extension.js --no-timestamp"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dom-to-semantic-markdown": "^1.5.0",
    "ws": "^8.14.2"
  },
  "optionalDependencies": {
    "google-protobuf": "^3.21.2",
    "protobufjs": "^7.2.5"
  }
}